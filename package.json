{
  "name": "behalf-chrome-extension",
  "version": "1.0.0",
  "type": "module",
  "description": "Chrome extension for managing browser tasks and communication with Cloudflare worker",
  "main": "worker/index-full.ts",
  "scripts": {
    "test": "node test/run-tests.js",
    "test:webhook": "node test/webhook-service.js",
    "test:e2e": "node test/run-tests.js",
    "dev": "wrangler dev --config wrangler-full.toml --port 8788",
    "dev:simple": "wrangler dev --config wrangler-simple.toml --port 8787",
    "deploy": "wrangler deploy",
    "deploy:dev": "wrangler deploy",
    "deploy:prod": "wrangler deploy --config wrangler.prod.toml",
    "deploy:versions": "wrangler versions upload",
    "build": "tsc",
    "setup-d1": "wrangler d1 create behalf && wrangler d1 execute behalf --file=worker/d1-schema.sql"
  },
  "keywords": [
    "chrome-extension",
    "cloudflare-worker",
    "neon-database",
    "task-management"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "chai": "^4.3.10",
    "express": "^4.18.2",
    "puppeteer": "^23.5.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250913.0",
    "@types/node": "^20.8.0",
    "itty-router": "^4.0.23",
    "typescript": "^5.2.2",
    "wrangler": "^4.37.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
