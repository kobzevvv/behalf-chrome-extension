{
  "manifest_version": 3,
  "name": "Behalf Task Manager",
  "version": "1.0.0",
  "description": "Chrome extension for managing browser tasks and communication with Cloudflare worker",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Behalf Task Manager"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
} 